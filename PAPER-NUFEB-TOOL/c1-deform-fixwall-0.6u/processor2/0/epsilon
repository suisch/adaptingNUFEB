FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 0.1;

boundaryField
{
    bottom
    {
        type            inletOutlet;
        inletValue      uniform 0.1;
        value           uniform 0.1;
    }
    top
    {
        type            fixedValue;
        value           uniform 0.1;
    }
    left
    {
        type            cyclic;
    }
    right
    {
        type            cyclic;
    }
    front
    {
        type            cyclic;
    }
    back
    {
        type            cyclic;
    }
    procBoundary2to1
    {
        type            processor;
        value           uniform 0.1;
    }
    procBoundary2to3
    {
        type            processor;
        value           uniform 0.1;
    }
    procBoundary2to3throughback
    {
        type            processorCyclic;
        value           uniform 0.1;
    }
}


